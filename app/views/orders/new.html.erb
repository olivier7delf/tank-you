<%= simple_form_for [ @vehicle, @order ] do |f| %>
  <%= f.input :name, :label => "Mon nom", input_html: { value: @user.name } %>
  <%= f.input :email, :label => "Mon email", input_html: { value: @user.email } %>
  <%= f.input :address, :label => "Mon adresse", input_html: { value: @user.address } %>
  <%= f.input :phone_number, :label => "Mon numéro de téléphone", input_html: { value: @user.phone_number } %>
  <%= f.input :start_date, :label => "Du", as: :date %>
  <%= f.input :end_date, :label => "Au", as: :date %>
  <%= f.submit "C'est parti!" %>
<% end %>

